  <script>
    tsParticles.load("tsparticles", {
      fullScreen: {
        enable: true,
        zIndex: -999
      },
      fpsLimit: 60,
      particles: {
        number: {
          value: 30,
          density: {
            enable: true,
            area: 800
          }
        },
        color: {
          value: ["#00C9A7"]
        },
        shape: {
          type: "circle"
        },
        opacity: {
          value: 0.8,
          random: true
        },
        size: {
          value: { min: 3, max: 7 },
          random: true
        },
        move: {
          enable: true,
          speed: 2,
          direction: "none",
          random: true,
          straight: false,
          outModes: {
            default: "out"
          }
        }
      },
      interactivity: {
        detectsOn: "canvas",
        events: {
          onHover: {
            enable: true,
            mode: "repulse"
          },
          onClick: {
            enable: true,
            mode: "push"
          },
          resize: true
        },
        modes: {
          repulse: {
            distance: 100,
            duration: 0.4
          },
          push: {
            quantity: 4
          }
        }
      },
      detectRetina: true
    }).then((container) => {
      if (container?.canvas?.element) {
        const canvasEl = container.canvas.element;
        canvasEl.style.transform = "translate3d(0, 0, 0)";
        canvasEl.style.willChange = "transform";
        canvasEl.style.position = "fixed";
        canvasEl.style.top = "0";
        canvasEl.style.left = "0";
        canvasEl.style.width = "100vw";
        canvasEl.style.height = "100vh";
      }
    });
  </script>
